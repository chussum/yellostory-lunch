{
  "name": "lunch-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build",
    "apidoc": "./node_modules/.bin/apidoc -i app/ -o doc/",
    "build": "yarn install && yarn run clean && ./node_modules/.bin/babel app --out-dir build",
    "dev": "yarn run start:dev",
    "start": "yarn run start:dev",
    "start:dev": "yarn install && yarn run clean && yarn apidoc && node _/scripts/development.js",
    "start:prod": "yarn run build && yarn apidoc && pm2 start _/scripts/production.js --name 'lunch-backend' -i 2",
    "reload": "yarn run build && pm2 reload lunch-backend",
    "stop": "pm2 stop lunch-backend && pm2 delete lunch-backend",
    "test": "yarn build && ./node_modules/.bin/mocha --compilers js:babel-register --require babel-polyfill --recursive app/**/*.spec.js"
  },
  "author": "iamdew <iam@hyungdew.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.3.0",
    "moment": "^2.18.1",
    "mongoose": "^4.9.5"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "mocha": "^3.1.2",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "should": "^11.1.1",
    "supertest": "^2.0.1"
  }
}
